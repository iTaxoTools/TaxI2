[flake8]
ignore = E501, E251, W503, W504
exclude =
    build
    dist
    src/itaxotools/taxi2/taxi2.py
    src/itaxotools/taxi2/library
    tests/test_derep_decont.py
    tests/test_ncd_self_distance.py
    tests/test_versus_all.py
    tests/test_versus_reference.py
per-file-ignores =
    src/itaxotools/**/__init__.py: F401
    scripts/*.py: F405, F403
